<% if (!login) { %>
    <%- include('../presetsViews/header',{title: 'Contacto',login:null}) %>
<% }else{ %>
    <%- include('../presetsViews/header',{title: 'Contacto',login:true,username:login.username,rol:login.rol}) %>
<% } %> 
<link rel="stylesheet" href="/css/signin.css">
    <div>
        <center>
            <div class="card col-md-2 col-6" style="background-color: #8623F1; border-radius: 10px; margin-left: 5px; margin-right: 30px; margin-bottom: 5px;margin-top: 30px; width: 35rem; align-items: center; ">
        <main class="form-signin">
            <form id="loginForm" action="/contact" method="POST">
                <img
                    class="mb-4"
                    src="https://res.cloudinary.com/mycloudsb/image/upload/v1668379802/logoformulario_wyemmv.svg"
                    alt="logo"
                    width="80"
                    height="67"
                />
                <h1 class="h3 mb-3 fw-normal" style="color:#ffffff ;">Contacto</h1>
                <div class="form-floating">
                    <input
                        type="email"
                        class="form-control"
                        id="floatingInput"
                        name="email"
                        placeholder="Correo Electronico"
                    />
                    <label for="floatingInput">Correo electronico</label>
                </div>
                <div class="form-floating">
                    <input
                        type="text"
                        class="form-control"
                        id="floatingInput"
                        name="subject"
                        placeholder="Asunto"
                    />
                    <label for="floatingInput">Asunto</label>
                </div>
                <div class="form-floating">
                    <textarea
                        class="text form-control"
                        id="floatingInput"
                        name="text"
                        placeholder="Su mensaje"
                        rows="30",
                        cols="50"
                    ></textarea>
                    <label for="floatingInput">Su mensaje</label>
                </div>
                <button class="w-100 btn btn-lg btn-warning" type="submit">
                    Enviar
                </button>
            </form>
        </main>
        </div>
        </center>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>
<%- include ('../presetsViews/footer')%>
