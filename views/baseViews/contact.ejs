<% if (!login) { %>
    <%- include('../presetsViews/header',{title: 'Contacto',login:null}) %>
<% }else{ %>
    <%- include('../presetsViews/header',{title: 'Contacto',login:true,username:login.username}) %>
<% } %> 
<link rel="stylesheet" href="/css/signin.css">
    <div>
        <main class="form-signin">
            <form id="loginForm" action="/contact" method="POST">
                <h1 class="h3 mb-3 fw-normal">Contacto</h1>
                <div class="form-floating">
                    <input
                        type="email"
                        class="form-control"
                        id="floatingInput"
                        name="email"
                        placeholder="Correo Electronico"
                    />
                    <label for="floatingInput">Correo electronico</label>
                </div>
                <div class="form-floating">
                    <input
                        type="text"
                        class="form-control"
                        id="floatingInput"
                        name="subject"
                        placeholder="Asunto"
                    />
                    <label for="floatingInput">Asunto</label>
                </div>
                <div class="form-floating">
                    <textarea
                        class="text form-control"
                        id="floatingInput"
                        name="text"
                        placeholder="Su mensaje"
                        rows="30",
                        cols="50"
                    ></textarea>
                    <label for="floatingInput">Su mensaje</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">
                    Enviar
                </button>
            </form>
        </main>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>
<%- include ('../presetsViews/footer')%>
