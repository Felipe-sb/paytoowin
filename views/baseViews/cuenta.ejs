<html>

    <%- include('../presetsViews/header',{title: 'PayTooWin',login:true,username:login.username}) %>


    
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="./css/cuenta.css">
</head>
<body>

    <div class="body-content">
        
<div class="header">
  <h2>Configuracion de cuenta</h2>
</div>

<div class="row">
  <div class="leftcolumn">
    <div class="card">
    <form action="/cuenta" method="POST">
        <div class="form-floating">
            <input
                type="email"
                class="form-control"
                id="floatingInput"
                name="email"
                value="<%=login.email%>"
                placeholder="Correo Electronico"
            />
            <label for="floatingInput">Correo electronico</label>
        </div>
        <button class="w-100 btn btn-lg btn-outline-warning" type="submit" onclick="">
            Actualizar Correo
        </button>
    </form>
    </div>

    <form action="/cuenta" method="POST">
    <div class="card">
        <div class="form-floating">
            <input
                type="password"
                class="form-control"
                id="floatingPassword"
                name="password"
                placeholder="Contraseña"
            />
            <label for="floatingPassword">Contraseña</label>
        </div>
        <div class="form-floating">
            <input
                type="password"
                class="form-control"
                id="floatingInput"
                name="confirmPassword"
                placeholder="Confirma tu contraseña"
            />
            <label for="floatingInput">Confirma tu contraseña</label>
        </div>
        <button class="w-100 btn btn-lg btn-outline-warning" type="submit" onclick="validateClientAccount()">
            Actualizar Contraseña
        </button>
        
      </div>
    </form>
    
    
  </div>

</div>
    </div>
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>

<%- include('../presetsViews/footer') %> 

</html>