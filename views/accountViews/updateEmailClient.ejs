<html>

    <%- include('../presetsViews/header',{title: 'PayTooWin',login:true,username:login.username,rol:login.rol}) %>


    
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/cuenta.css">
</head>
<body>

    <div class="body-content">
        <h6 class="mb-0"><a href="/account/accountSetting" class="text-body"><i
            class="fas fa-long-arrow-alt-left me-2"></i>Volver</a></h6><br>
        
<div class="header">
  <h2>Configuracion de correo</h2>
</div>

<div class="row">
  <div class="leftcolumn">
    <div class="card">
    <form action="/account/updateEmailClient" method="POST">
        <div class="form-floating">
            <input
                type="email"
                class="form-control"
                id="floatingInput"
                name="email"
                value="<%=login.email%>"
                placeholder="Correo Electronico"
            />
            <label for="floatingInput">Correo electronico</label>
        </div>
        <button class="w-100 btn btn-lg btn-outline-warning" type="submit">
            Actualizar Correo
        </button>
    </form>
    </div>
  </div>

</div>
    </div>
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>

<%- include('../presetsViews/footer') %> 

</html>