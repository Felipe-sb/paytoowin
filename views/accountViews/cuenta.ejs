<html>

    <%- include('../presetsViews/header',{title: 'PayTooWin',login:true,username:login.username,rol:login.rol}) %>


    
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/css/cuenta.css">
</head>
<body>

    <div class="body-content">
        <h6 class="mb-0"><a href="/account/accountSetting"  style="color: #ffffff;"><i
            class="fas fa-long-arrow-alt-left me-2"></i>Volver</a></h6>
        
            <center>
                <div class="card col-md-2 col-6" style="background-color: #8623F1;margin: 0 auto; border-radius: 10px; margin-left: 5px; margin-right: 30px; margin-bottom: 5px;margin-top: 30px; width: 70%; align-items: center; ">
            <main class="form-signin">
                <form id="loginForm" action="/account/cuenta" method="POST">
                    <img
                        class="mb-4"
                        src="https://res.cloudinary.com/mycloudsb/image/upload/v1668379802/logoformulario_wyemmv.svg"
                        alt="logo"
                        width="80"
                        height="67"
                    />
                    <h1 class="h3 mb-3 fw-normal" style="color:#ffffff ;">Configuracion de contraseña</h1>
                    <div class="form-floating">
                        <input
                            type="password"
                            class="form-control"
                            id="floatingPassword"
                            name="clientPassword"
                            placeholder="Contraseña Actual"
                        />
                        <label for="floatingPassword">Contraseña Actual</label>
                    </div>
                    <div class="form-floating">
                        <input
                            type="password"
                            class="form-control"
                            id="floatingPassword"
                            name="password"
                            placeholder="Contraseña"
                        />
                        <label for="floatingPassword">Contraseña Nueva</label>
                    </div>
                    <div class="form-floating">
                        <input
                            type="password"
                            class="form-control"
                            id="floatingInput"
                            name="confirmPassword"
                            placeholder="Confirma tu contraseña"
                        />
                        <label for="floatingInput">Confirma tu contraseña</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-warning" type="submit" style="font-size: 85% ;">
                        Actualizar Contraseña
                    </button>
                    
                    
                </form>
            </main>
            </div>
        </div>
    </center>
</body>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>

<%- include('../presetsViews/footer') %> 

</html>