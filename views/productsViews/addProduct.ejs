<% if(!login){ %>
	<%- include('../presetsViews/header',{title: 'Añadir Producto',login:null}) %>	
<% }else{ %>
	<%- include('../presetsViews/header',{title: 'Añadir Producto',login:true,username:login.username,rol:login.rol}) %>
<% } %> 
<link rel="stylesheet" href="/css/signin.css">
<div>
	<main class="form-signin">
		<form action="/products/add-product" method="post" enctype="multipart/form-data">
			<h1 class="h3 mb-3 fw-normal" style="color: #ffffff ;">Agregar Producto</h1>
			<div class="form-floating">
				<input
					type="text"
					class="form-control"
					id="floatingInput"
					name="title"
					placeholder="Titulo"
				/>
				<label for="floatingInput">Titulo</label>
			</div>
			<div class="form-floating">
				<%- include('../presetsViews/gameSelect') %>
			</div>
			<div class="form-floating">
				<input
					type="number"
					class="form-control"
					id="floatingInput"
					name="level"
					placeholder="Nivel"
				/>
				<label for="floatingInput">Nivel</label>
			</div>
			
			<div class="form-floating">
				<div class="" style="padding-top: 50px;">
					<input class="form-control" type="file" name="images" id="formFileMultiple" multiple>
				  </div>
				<label for="floatingInput" style="border: 1px solid #000000; width: 100%;">Imagenes</label>
			</div>
			
			<div class="form-floating">
				<%- include('../presetsViews/gameType') %>
			</div>
			<div class="form-floating">
				<%- include('../presetsViews/gameDeveloper') %>
			</div>
			<div class="form-floating">
				<input
					type="number"
					class="form-control"
					id="floatingInput"
					name="price"
					placeholder="Precio"
				/>
				<label for="floatingInput">Precio</label>
			</div>
			<div class="form-floating">
				<textarea
					class="form-control"
					id="floatingInput"
					name="description"
					placeholder="Descripcion"
				></textarea>
				<label for="floatingInput">Descripción</label>
			</div>
			<div class="form-floating">
				<input
					type="text"
					class="form-control"
					id="floatingInput"
					name="username"
					placeholder="Nombre de usuario"
				/>
				<label for="floatingInput">Nombre de usuario</label>
			</div>
			<div class="form-floating">
				<input
					type="password"
					class="form-control"
					id="floatingInput"
					name="password"
					placeholder="Contraseña Cuenta"
				/>
				<label for="floatingInput">Contraseña Cuenta</label>
			</div>
			<div class="form-floating">
				<input
					type="email"
					class="form-control"
					id="floatingInput"
					name="email"
					placeholder="Correo Asociado"
				/>
				<label for="floatingInput">Correo Asociado</label>
			</div>
			
			
			

			<button class="w-100 btn btn-lg btn-warning" type="submit">
				Añadir Producto
			</button>
		</form>
	</main>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>
<%- include('../presetsViews/footer') %>
