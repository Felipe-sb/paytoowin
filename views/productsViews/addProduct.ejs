<%- include('../presetsViews/header',{title: 'Añadir Producto',login:null}) %>
<link rel="stylesheet" href="/css/signin.css">
<div>
	<main class="form-signin">
		<form action="/products/add-product" method="post">
			<h1 class="h3 mb-3 fw-normal">Agregar Producto</h1>
			<div class="form-floating">
				<input
					type="text"
					class="form-control"
					id="floatingInput"
					name="title"
					placeholder="Titulo"
				/>
				<label for="floatingInput">Titulo</label>
			</div>
			<div class="form-floating">
				<input
					type="text"
					class="form-control"
					id="floatingInput"
					name="game"
					placeholder="Juego"
				/>
				<label for="floatingInput">Juego</label>
			</div>
			<div class="form-floating">
				<input
					type="number"
					class="form-control"
					id="floatingInput"
					name="level"
					placeholder="Nivel"
				/>
				<label for="floatingInput">Nivel</label>
			</div>
			<div class="form-floating">
				<textarea
					class="form-control"
					id="floatingInput"
					name="description"
					placeholder="Descripcion"
				></textarea>
				<label for="floatingInput">Descripcion</label>
			</div>
			<div class="form-floating">
				<input
					type="number"
					class="form-control"
					id="floatingInput"
					name="price"
					placeholder="Precio"
				/>
				<label for="floatingInput">Precio</label>
			</div>
			<button class="w-100 btn btn-lg btn-primary" type="submit">
				Añadir Producto
			</button>
		</form>
	</main>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (alertConfig.alert) { %>
        <script>
            Swal.fire({
                title: '<%=alertConfig.title%>',
                text: '<%=alertConfig.text%>',
                icon: '<%=alertConfig.icon%>',
                showConfirmButton: <%=alertConfig.confirmButton%>,
                timer: <%=alertConfig.timer%>,
            }).then(() => {
                window.location = '/<%=alertConfig.route%>'
            })
        </script>
    <% } %>
<%- include('../presetsViews/footer') %>
